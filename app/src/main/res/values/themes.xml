        <!-- UGA color scheme -->
        <item name="colorPrimary">@color/uga_red</item>
        <item name="colorOnPrimary">@color/uga_white</item>

        <item name="colorPrimaryContainer">@color/uga_red_dark</item>
        <item name="colorOnPrimaryContainer">@color/uga_white</item>

        <item name="colorSecondary">@color/uga_red</item>
        <item name="colorOnSecondary">@color/uga_white</item>

        <!-- System bars -->
        <item name="android:statusBarColor">@color/uga_red_dark</item>
        <item name="android:navigationBarColor">@color/uga_red_dark</item>
